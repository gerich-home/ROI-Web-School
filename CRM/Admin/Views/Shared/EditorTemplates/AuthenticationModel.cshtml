@model Crm.Admin.Models.AuthenticationModel
@Html.HiddenFor(model => model.ReturnUrl)
<div class="form-field">
    <span class="label-field">@Html.LabelFor(model => model.Login)</span>
    <span class="editor-field">@Html.EditorFor(model => model.Login)</span>
    @Html.ValidationMessageFor(model => model.Login)
</div>
<div class="form-field">
    <span class="label-field">@Html.LabelFor(model => model.Password)</span>
    <span class="editor-field">@Html.PasswordFor(model => model.Password, new { maxlength = 32 })</span>
</div>
<div>@Html.ValidationMessageFor(model => model)</div>
<div class="form-field">
    <span class="editor-field">@Html.EditorFor(model => model.Remember)</span>
    <span class="label-field">@Html.LabelFor(model => model.Remember)</span>
</div>